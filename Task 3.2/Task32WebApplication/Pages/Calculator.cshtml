@page
@model Task32WebApplication.Pages.CalculatorModel
@{
    ViewData["Title"] = "Calculator";
}

<h1>Simple Calculator</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Num1">First Number</label>
        <input asp-for="Num1" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Operation">Operation</label>
        <select asp-for="Operation" class="form-control">
            <option value="+">Addition (+)</option>
            <option value="-">Subtraction (-)</option>
            <option value="*">Multiplication (*)</option>
            <option value="/">Division (/)</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Num2">Second Number</label>
        <input asp-for="Num2" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Calculate</button>
</form>

@if (Model.Result != 0 || Model.Operation == "/" && Model.Num2 == 0) {
    <div class="mt-3">
        <h3>
            Result:
            @if (double.IsNaN(Model.Result)) {
                <span class="text-danger">Cannot divide by zero!</span>
            } else {
                @Model.Result
            }
        </h3>
    </div>
}